{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "jsx": "preserve",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "react/*"
      ]
    }
  },
  "include": [
    "react"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
